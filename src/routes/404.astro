---
import Layout from "@layouts/Layout.astro";
import Button from "@components/shared/Button.astro";
import { t } from "i18n:astro";
import { buildUrl } from "@utils/urlUtils";
---

<Layout single>
    <section>
        <h1>404</h1>
        <p>{t("404:description")}</p>
        <Button variant="primary" href={buildUrl("/")}>
            {t("404:button")}
        </Button>
    </section>
</Layout>

<style>
    section {
        height: 80vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 24px;
        text-align: center;
    }

    h1 {
        font-size: 120px;
        line-height: 1;
        font-weight: 700;
        color: var(--accent);
        background: linear-gradient(180deg, var(--accent) 0%, transparent 150%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    p {
        font-size: 18px;
        color: var(--text-secondary);
        max-width: 400px;
        margin-bottom: 24px;
    }
</style>
