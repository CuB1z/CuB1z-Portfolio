---
import { getLocale, t } from "i18n:astro";
import { getCollection } from "astro:content";

import { buildUrl } from "@/utils/urlUtils";

import Layout from "@layouts/Layout.astro";
import InnerHeader from "@components/shared/InnerHeader.astro";

const currentLocale = getLocale();

const allPosts = await getCollection("post");
const posts = allPosts.filter(
    (post) => !post.data.locale || post.data.locale === currentLocale
);

const sortedPosts = posts.sort(
    (a, b) =>
        new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);
---

<Layout extended>
    <InnerHeader title={t("blog:title")} />

    {
        sortedPosts.map((post) => (
            <a class="post-card" href={buildUrl(`/blog/${post.slug}`)}>
                <div class="post-content">
                    <h2 class="post-title">{post.data.title}</h2>

                    <p class="post-description">{post.data.description}</p>

                    <ul class="post-tags">
                        {post.data.tags?.map((tag) => (
                            <li class="tag">{tag}</li>
                        ))}
                    </ul>

                    <div class="post-footer">
                        <time class="post-date">
                            {new Date(post.data.pubDate).toLocaleDateString(
                                currentLocale === "es" ? "es-ES" : "en-US"
                            )}
                        </time>
                    </div>
                </div>

                {post.data.image && (
                    <div class="post-image">
                        <img
                            src={post.data.image}
                            alt={`Image for ${post.data.title}`}
                        />
                    </div>
                )}
            </a>
        ))
    }

    <span class="decorator" aria-hidden="true">...</span>
</Layout>

<style>
    .post-card {
        width: 100%;
        height: 200px;
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        display: flex;
        position: relative;
        margin-bottom: 24px;
    }

    .post-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
        border-color: var(--accent);
    }

    .post-content {
        flex: 1;
        padding: 24px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-width: 0;
    }

    .post-image {
        width: 264px;
        height: 100%;
    }
    
    .post-image img {
        width: 100%;
        height: 100%;
        overflow: hidden;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .post-card:hover .post-image img {
        transform: scale(1.05);
    }

    .post-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 16px;
    }

    .tag {
        display: inline-block;
        list-style: none;
        padding: 4px 8px;
        background-color: var(--accent-alpha);
        color: var(--accent);
        font-size: 11px;
        font-weight: 400;
        border-radius: 12px;
        border: 1px solid var(--accent);
    }

    .post-title {
        margin: 0 0 8px 0;
        font-size: 18px;
        font-weight: 400;
        line-height: 1.3;
    }

    .post-description {
        color: var(--text-secondary);
        line-height: 1.4;
        font-size: 14px;
        font-weight: 300;
        margin-bottom: 16px;
    }

    .post-footer {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: 8px;
    }

    .post-date {
        color: var(--text-muted);
        font-size: 12px;
        font-weight: 500;
        letter-spacing: 1px;
    }

    .decorator {
        font-size: 48px;
        color: var(--text-muted);
        display: block;
        text-align: center;
        margin: 32px 0;
        user-select: none;
    }

    @media (max-width: 768px) {
        .blog-container {
            padding: 32px 16px;
        }

        .posts-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .post-card {
            min-height: 180px;
            height: auto;
            flex-direction: column;
        }

        .post-content {
            padding: 16px;
            flex: 1;
        }

        .post-image {
            display: none;
        }

        .post-title {
            font-size: 14px;
        }

        .post-description {
            font-size: 12px;
            -webkit-line-clamp: 2;
        }

        .post-footer {
            flex-direction: column;
            align-items: flex-start;
            gap: 4px;
        }
    }
</style>
