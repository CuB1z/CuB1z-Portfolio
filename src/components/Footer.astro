---
import { NICK } from "../constants";

const year = new Date().getFullYear();
---

<footer>
    <div class="content">
        <div class="inner-content left-content">
            <a href="#">
                <span>{NICK}</span>
            </a>
        </div>
        <div class="inner-content right-content">
            <span>&copy; {year}</span>
        </div>
    </div>
</footer>

<style>
    footer {
        width: 100%;
        height: var(--footer-height);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .content {
        padding: 0.5rem;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--footer-bg);
        border-radius: 5px;
    }

    .inner-content {
        width: 50%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 25px;
    }

    a {
        transition: all 0.3s ease;
    }

    a:hover {
        transform: translateY(-3px);
    }

    .left-content {
        justify-content: flex-start;
    }

    .right-content {
        justify-content: flex-end;
    }
</style>
