---
import { CalendarIcon } from "@lucide/astro";
import { t } from "i18n:astro";
---

<section>
    <header>
        <h2>{t("resume:experience_summary.title")}</h2>
    </header>
    <ul class="experience-list">
        {
            t("resume:experience_summary.work_experience", {
                returnObjects: true,
            }).map((job) => (
                <li class="job">
                    <div class="header">
                        <h3>{job.position}</h3>
                        <p>
                            <CalendarIcon size={16} class="icon" />
                            {job.duration}
                        </p>
                    </div>
                    <p class="company">{job.company}</p>
                    <p class="description">{job.description}</p>
                    <ul>
                        {job.achievements.map((achievement) => (
                            <li>{achievement}</li>
                        ))}
                    </ul>
                </li>
            ))
        }
    </ul>
</section>

<style>
    section {
        width: 100%;
        padding: 24px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-bottom: 48px;
        border-radius: 8px;
        background-color: var(--bg-secondary);
        background-image: radial-gradient(
            circle at 95% 10%,
            var(--aureola-big) 100px,
            transparent 4px
        );
        border: 1px solid var(--border-color);

        header {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            color: var(--text-primary);
        }

        .experience-list {
            width: 100%;
            list-style: none;
            display: flex;
            flex-direction: column;
            gap: 24px;

            .job {
                width: 100%;
                display: flex;
                flex-direction: column;
                gap: 8px;
                padding-left: 16px;
                border-left: 2px solid var(--accent);

                .header {
                    width: 100%;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    flex-wrap: wrap;
                    gap: 8px;
                    margin-bottom: 8px;

                    h3 {
                        color: var(--text-primary);
                    }

                    p {
                        display: flex;
                        align-items: center;
                        gap: 8px;
                        color: var(--text-secondary);
                        font-size: 14px;
                        font-weight: 500;
                        letter-spacing: 0.5px;
                    }
                }
            }
            .company {
                color: var(--accent);
                font-weight: 500;
                font-size: 16px;
                margin-bottom: 8px;
            }

            .description {
                color: var(--text-secondary);
                font-size: 14px;
                margin-bottom: 8px;
            }

            ul {
                list-style: circle;
                padding-left: 24px;
                color: var(--text-secondary);
                font-size: 14px;

                li {
                    margin-bottom: 4px;
                }
            }
        }
    }
</style>
