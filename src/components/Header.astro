---
import { NICK } from "../constants";
import HamburgerButton from "./HamburgerButton.astro";

const onMenuClick = () => {
    const nav = document.querySelector("ul");
    nav.classList.toggle("open");
};

import { NAVIGATION } from "../constants";

const lang = Astro.url.pathname.split("/")[1] || "en";
const navToLang = lang === "en" ? "es" : "";
const langText = lang === "en" ? "EN" : "ES";
---

<header>
    <nav>
        <div class="logo">
            <a href="#">{NICK}</a>
        </div>
        <ul>
            <li><a href="#about">{NAVIGATION.about[lang]}</a></li>
            <li><a href="#projects">{NAVIGATION.projects[lang]}</a></li>
            <li><a href="#contact">{NAVIGATION.contact[lang]}</a></li>
            <li><a class="responsive-lang" href={`/${navToLang}`}>{langText}</a></li>
        </ul>
        <div class="lang">
            <a href={`/${navToLang}`}>{langText}</a>
        </div>
        <div class="responsive-nav">
            <HamburgerButton onMenuClick={onMenuClick} />
        </div>
    </nav>
</header>

<style>
    header {
        width: 100%;
        height: var(--header-height);
        position: fixed;
        top: 0;
        right: 0;
        background-color: var(--header-bg);
        backdrop-filter: blur(10px);
        z-index: 1000;
    }

    nav {
        position: relative;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
    }

    .logo {
        padding-left: 2rem;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        font-size: 1.5rem;
    }

    .lang {
        padding-right: 2rem;
        font-size: 1rem;
    }

    .responsive-lang {
        display: none;
    }

    ul {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5rem;
    }

    li {
        transition: transform 0.2s ease-in-out;
    }

    li:hover {
        transform: translateY(-3px);
    }

    .responsive-nav {
        display: none;
        justify-content: flex-end;
        padding-right: 2rem;

        & input {
            display: none;
        }
    }

    @media (max-width: 750px) {
        nav {
            grid-template-columns: 1fr 1fr;
        }

        ul {
            position: fixed;
            top: var(--header-height);
            right: 0;
            height: 100vh;
            width: 300px;
            padding-top: 25px;
            flex-direction: column;
            justify-content: flex-start;
            background-color: var(--header-bg);
            transform: translateX(100%);
            transition: transform 0.3s ease-in-out;
        }

        ul.open {
            transform: translateX(0);
        }

        .responsive-nav {
            display: flex;
            justify-content: flex-end;
        }

        .responsive-lang {
            display: block;
        }

        .lang {
            display: none;
        }
    }
</style>
