---
import LangToggleButton from "@/components/shared/LangToggleButton.astro";

interface Props {
    altLangUrl?: string;
}

const { altLangUrl } = Astro.props as Props;
---

<header>
    <LangToggleButton altLangUrl={altLangUrl} />
</header>

<style>
    header {
        width: 100%;
        max-width: 1920px;
        padding: 16px;
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }
</style>
