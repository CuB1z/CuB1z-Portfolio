---
interface Props {
    href: string;
    title: string;
    smaller?: boolean;
}

const { href, title, smaller } = Astro.props as Props;
---

<a
    href={href}
    class={`social-link ${smaller ? "smaller" : ""}`}
    target="_blank"
    rel="noopener noreferrer"
    title={title}
    aria-label={title}
>
    <slot />
</a>

<style>
    .social-link {
        --size: 48px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: var(--size);
        height: var(--size);
        border-radius: 9999px;
        border: 1px solid var(--border-color);
        background-color: var(--bg-secondary);
        color: var(--text-secondary);
        text-decoration: none;
        transition: all 0.2s ease-in-out;

        &.smaller {
            --size: 40px;
        }

        &:hover {
            color: var(--accent);
            border-color: var(--accent);
            transform: translateY(-2px);
            box-shadow: 0 2px 8px var(--accent-alpha);
        }

        &:active {
            scale: 0.95;
        }
    }
</style>
